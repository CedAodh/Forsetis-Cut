		lda wEventEngineParameter1,b
		bne _False

		lda #Cliff
		sta wEventEngineCharacterTarget,b
		jsl rlASMCCountAllUnitUncapturedAlive
		lda wEventEngineParameter1,b
		bne _False

		lda #Bowie
		sta wEventEngineCharacterTarget,b
		jsl rlASMCCountAllUnitUncapturedAlive
		lda wEventEngineParameter1,b
		bne _False

		lda #Leena
		sta wEventEngineCharacterTarget,b
		jsl rlASMCCountAllUnitUncapturedAlive
		lda wEventEngineParameter1,b
		bne _False

		sec
		bra _End

		_False
		clc

		_End
		rtl

